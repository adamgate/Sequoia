@inherits LayoutComponentBase

<HeadContent>
    <RadzenTheme Theme="material" />
</HeadContent>

<RadzenLayout>
    <RadzenStack Orientation="Orientation.Horizontal">

        <NavMenu />

        <ContextSidebar />

        <RadzenTabs @bind-SelectedIndex="@selectedIndex">
            <Tabs>
                <RadzenTabsItem Text="Homepage">Homepage</RadzenTabsItem>
                <RadzenTabsItem Text="Things to Try">Things to Try</RadzenTabsItem>
            </Tabs>
        </RadzenTabs>

        </RadzenStack>

    <RadzenBody>
        <article class="content px-4">
            @Body
        </article>
    </RadzenBody>
</RadzenLayout>

<RadzenComponents />

@code {
    bool contextSidebarExpanded = false;
    int selectedIndex = 0;
}