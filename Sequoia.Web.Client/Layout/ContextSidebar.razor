<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
    <RadzenIcon Icon="center_focus_weak"></RadzenIcon>
    <RadzenIcon Icon="search"></RadzenIcon>
</RadzenStack>

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Sequoia.Web.Client</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboards">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Dashboards
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="notes">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Notes
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="calendar">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Calendar
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="to-do">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> To-Do
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="time_tracker">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Time Tracker
            </NavLink>
        </div>
        <div class="nav-item align-bottom px-3">
            <NavLink class="nav-link" href="settings">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Settings
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
