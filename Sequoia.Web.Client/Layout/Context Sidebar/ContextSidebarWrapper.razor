<RadzenStack Orientation="Orientation.Vertical" class="h-100" Visible="@(IsExpanded)">

    <RadzenMenu Style="background-color: white" class="w-100; justify-content-center">
        <RadzenMenuItem Icon="center_focus_weak" IconColor="black" />
        <RadzenMenuItem Icon="search" IconColor="black" />
    </RadzenMenu>

    <RadzenSidebar class="h-100">
        <NotesSidebar />
    </RadzenSidebar>
</RadzenStack>


@code {
    [Parameter] public bool IsExpanded { get; set; }
    [Parameter] public EventCallback<bool> IsExpandedChanged { get; set; }

    public async Task UpdateIsExpandedChanged()
        => await IsExpandedChanged.InvokeAsync(IsExpanded);
}